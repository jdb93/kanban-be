{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2020",
    "types": ["node"],
    "esModuleInterop": true,
    "lib": ["esnext"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
